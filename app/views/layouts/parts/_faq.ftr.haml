.row.colored
  %noindex
    #sh-about.text-left{ style: 'padding: 16px; margin-bottom: 24px;' }
      .cat-description{ style: 'background: #FAF2E9; padding: 16px; border-radius: 8px; '}
        .finfo
          %h2= faq_data[:title]
          .hideforh2
            %p= faq_data[:description]
            - faq_data[:questions].each do |q|
              / %div{itemscope: true, itemtype: "http://schema.org/Question"}
              %div
                / %h3{itemprop: "name"}= q[:question]
                %h3= q[:question]
                .hideforh3
                  / %meta{content: "5", itemprop: "upvoteCount"}/
                  %div{itemprop: "acceptedAnswer", itemscope: true, itemtype: "http://schema.org/Answer"}
                    %div
                      / %p{itemprop: "text"}!= q[:answer]
                      %p!= q[:answer]
        .finfo
          .clear-both
        .clear-both