- # encoding: utf-8
- @title = 'Фотогалерея'

%h2 Фотогалерея
#albums-list
	- @albums.each do |album|
		-if !album.photos.count.zero?
			.item
				- lp = album.photos.last
				-#=link_to image_tag(lp.image, :alt => lp.title), url_for(:album, :index, :id => album), :class => 'image'
				-#%a{:href => (url_for(:album, :index, :id => album))}
				=link_to url_for(:album, :index, :id => album) do
					=image_tag(lp.image, :alt => lp.title)
					.title= album.title
