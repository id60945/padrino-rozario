      .filter

        .line3{ style: "text-align: left;" }


          - if params[:all].blank?
            .dropdown{ style: "text-align: right; padding-top: 4px;" }
              %a.dropdown-toggle.KS92KD0V{"data-toggle" => "dropdown", :href => "#"}
                Сортировка товаров
                %b.caret
              %ul.dropdown-menu{ style: "right: 0; left: auto;" }
