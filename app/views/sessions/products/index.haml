- # encoding: utf-8

:plain
  <script>
    $(function() {
      $('.selectpicker').selectpicker();
      $('.selectpicker').selectpicker('val', [#{@pc_ids}]);
      $('.selectpicker').selectpicker('render');
      $('.selectpicker2').selectpicker();
      $('.selectpicker2').selectpicker('val', [#{@pt_ids}]);
      $('.selectpicker2').selectpicker('render');
    });
  </script>

-form_tag url(:products, :search), :method => :get, :class => 'form-horizontal' do
  %fieldset.control-group
    =text_field_tag :query, :class => 'search_field', :placeholder => 'поиск'

-form_tag url(:products, :category), :method => :get, :class => 'form-horizontal' do
  %fieldset.control-group
    .controls{:class => "nomargin"}
      =select_tag(:category_id, :collection => @categories, :fields => [:title, :id], :class => 'selectpicker input-xlarge input-with-feedback width90', :autofocus => true, :multiple => true, :data => {:live_search => "true"})
      =submit_tag "Ok", :class => "btn btn-primary width9"

%ul.nav.nav-tabs
  %li.active=link_to tag_icon(:list, pat(:list)), url(:products, :index)
  %li=link_to tag_icon(:plus, pat(:new)), url(:products, :new)

.tabs-content
  %table#list.table.table-striped.table-hover.table-condensed
    %thead
      %tr
        %th.header.list-menu
          .dropdown
            %a.list-menu-toggle.dropdown-toggle{:href => '#', :'data-toggle' => :dropdown}
              =tag_icon :magic
              %span.caret
            %ul.list-menu.dropdown-menu{:role => :menu}
              %li.list-menu-wrapper=link_to tag_icon(:check, pat(:select_all)), '#', :id => 'select-all', :class => 'list-menu-link'
              %li.list-menu-wrapper.list-menu-wrapper-disabled
                =link_to tag_icon(:'check-empty', pat(:deselect_all)), '#', :id => 'deselect-all', :class => 'list-menu-link list-menu-link-disabled'
              %li.list-menu-divider.divider
              %li.list-menu-wrapper.list-menu-wrapper-disabled
                =link_to tag_icon(:trash, pat(:delete_selected)), '#', :id => 'delete-selected', :class => 'list-menu-link list-menu-link-disabled'
                .list-menu-popover-delete-selected.popover.right
                  .arrow
                  %h3.popover-title=pat(:delete_selected_title)
                  .popover-content
                    -form_tag url(:products, :destroy_many), :method => :delete do
                      =hidden_field_tag :product_ids, :'data-delete-many-ids' => true
                      =submit_tag pat(:delete), :class =>'list-menu-popover-delete-selected-btn btn btn-danger btn-small'
                      .btn.btn-small.cancel=pat(:cancel)
        %th.header= :ID
        %th.header= :Изображение
        %th.header= :Каталог
        %th.header= :Название
        %th.header= :Теги
        %th.header= :Описание
        %th.header= :Цена
        %th.header= :Создан
        %th.header= :Обновлен
        %th.header.list-row-action-header



    %tbody
      -@products.each do |product|
        %tr.list-row
          %td.list-column.list-selectable
            =check_box_tag 'product_ids[]', :value => product.id, :class => 'list-selectable-checkbox'
          %td.list-column=product.id
          %td.list-column=image_tag(product.image, :class => 'img-rounded', :style => "max-width:200px;")
          %td.list-column=product.categories.first.nil? ? 'нет' : product.categories.map(&:title)
          %td.list-column=product.header
          %td.list-column=product.tags.first.nil? ? 'нет' : product.tags.map(&:title)
          %td.list-column=truncate_words(strip_tags(product.text))
          %td.list-column=product.price
          %td.list-column=time_ago_in_words product.created_at
          %td.list-column=time_ago_in_words product.updated_at
          %td.list-column.list-row-action
            .list-row-action-wrapper
              =link_to tag_icon(:edit), :href => url(:products, :edit, :id => product.id), :rel => :tooltip, :title => "#{pat(:edit)} product", :class => 'list-row-action-wrapper-link'
              =link_to tag_icon(:trash), :rel => :tooltip, :title => "#{pat(:delete)} product", :class => 'list-row-action-delete-one list-row-action-wrapper-link'
              .popover.list-row-action-popover-delete-one.left
                .arrow
                %h3.popover-title=pat(:delete, :model => "product")
                .popover-content
                  -form_tag url(:products, :destroy, :id => product.id), :method => :delete do
                    =submit_tag pat(:delete), :class =>'list-row-action-popover-delete-one-btn btn btn-danger btn-small'
                    .btn.btn-small.cancel=pat(:cancel)
!=will_paginate @products
